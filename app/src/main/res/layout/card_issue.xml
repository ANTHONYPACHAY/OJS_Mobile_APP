<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/issueCardElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/imgIssue"
            android:layout_width="119dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/txtmuestra"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/issueTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/issueNumercard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_column="0"
                        android:padding="3dip"
                        android:text="@string/txtmuestra"
                        />
                    <TextView
                        android:id="@+id/issueVolumencard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="@string/txtmuestra"
                        />
                    <TextView
                        android:id="@+id/issueYearcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:padding="3dip"
                        android:text="@string/txtmuestra"
                        />
                </TableRow>
            </TableLayout>


            <TextView
                android:id="@+id/issueDoicard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="3dip"
                android:text="@string/txtmuestra"
                android:textColor="#2196F3"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/issueDatecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"

                />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>